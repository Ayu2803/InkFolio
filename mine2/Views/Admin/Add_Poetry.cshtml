
@{
    ViewBag.Title = "Add_Poetry";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="~/Content/Mine/CSS/Admin/AddPoem.css">
</head>
<body>

    <div id="form">

        <form action="" method="post">


            <div id="heading">
                <h1 style="color: white; font-family: sans-serif; font-size: xxx-large; font-weight: lighter; margin-left: 21%; margin-top: 5%;">Add Poem</h1>
            </div>

            <input type="text" placeholder="Poetry Name" style="width: 300px; height: 30px; font-size: 17px; letter-spacing: 1px; padding-left: 3%; background: transparent; border: none; border-bottom: 3px solid purple;" name="Title">


            <br><br>

            <input type="file" multiple style="width: 300px; height: 30px; font-size: 17px; letter-spacing: 1px; padding-left: 3%; background: transparent; border: none; border-bottom: 3px solid purple; margin-top: 3%;" name="Images">

            <br><br><br>

            <textarea name="" id="Poem" cols="30" rows="3" placeholder="Write Poem" style=" font-size: 17px; letter-spacing: 1px; padding-left: 3%; padding-top: 4%; background: transparent; border: none; border-bottom: 3px solid purple; margin-top: 1%; border-left: 3px solid purple; margin-top: 1%;"></textarea>

            <br><br>

            <input type="submit" value="Add" style="height: 40px; width: 150px; background-color: rgb(154, 6, 154); color: white; border: none; box-shadow: 5px 5px 8px 1px rgb(10, 10, 10); margin-top: 3%; font-size: 19px; border-radius: 8px; margin-left: 21%;">


        </form>

    </div>

    <div id="table">

        <table style="border: 1px solid white; margin: auto; padding: 2px;">

            <thead>
            <th style="border: 1px solid white; padding: 25px; color: white;">
                SR
            </th>

            <th style="border: 1px solid white; padding: 20px; color: white;">
                Title
            </th>


            <th style="border: 1px solid white; padding: 20px; color: white;">
                Images
            </th>


            <th style="border: 1px solid white; padding: 20px; color: white;">
                Content
            </th>

            </thead>


            </thead>


            @{
                if (ViewBag.data != null)
                {
                    foreach (var r in ViewBag.data.Rows)
                    {
                        <tr>
                            <td style="border: 1px solid white; padding: 20px; color: white;">
                                @r[0]
                            </td>


                            <td style="border: 1px solid white; padding: 20px; color: white;">
                                @r[1]
                            </td>


                            <td style="border: 1px solid white; padding: 20px; color: white;">
                                @r[2]
                            </td>

                            <td style="border: 1px solid white; padding: 20px; color: white;">
                                @r[3]
                            </td>
                        </tr>
                    }
                }
            }
        </table>
    </div>

</body>
</html>

